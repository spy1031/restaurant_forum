<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h2>Edit Profile</h2>

    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name,"Name" %>
        <%= f.text_field :name ,class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :intro,"Introduction" %>
        <%= f.text_field :intro ,class: "form-control"%>
      </div>
      
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>    
    <% end %>
    </div>
    
  </div>
</div>