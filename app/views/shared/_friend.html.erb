<% if user != current_user%>
  <% if current_user.is_friend?(user) ==3 %>
    <%= link_to '刪除好友', friendship_path(user),method: :delete ,class: "btn btn-danger"%>
  <% elsif current_user.is_friend?(user) ==2 %>
    <%= link_to '同意好友邀請', friendship_path(user),method: :put ,class: "btn btn-warning"%>
  <% elsif current_user.is_friend?(user) ==1 %>
    <%= link_to '取消好友邀請', friendship_path(user),method: :delete ,class: "btn btn-danger"%>
  <% else %>
    <%= link_to '提出好友邀請', friendships_path(friend_id: user.id),method: :post,class: "btn btn-success" %>
  <% end %>
<% end %>