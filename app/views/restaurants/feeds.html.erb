
<ul class="nav nav-tabs">
  <li role="presentation" ><%= link_to "首頁",root_path%></li>
  <li role="presentation" class="active"><a href="#">最新動態</a></li>
  <li role="presentation" ><%= link_to "人氣餐廳（TOP10）",ranking_restaurants_path%></li>
  <li role="presentation" ><%= link_to "美食達人",users_path%></li>
</ul>
<br>

<div class="container">
  <h2>餐廳最新動態</h2>
  <br>
  <div class="col-sm-6 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">最新餐廳</div>
      <div class="panel-body">
        <% @recent_restaurants.each do |restaurant| %>
        <h4><%= link_to restaurant.name , restaurant_path(restaurant) %></h4>
        <p><%= restaurant.category.name %></p>
        <p><%= restaurant.description %></p>
        <hr>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">最新評論</div>
      <div class="panel-body">
        <% @recent_comments.each do |comment| %>
        <h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
        <p><%= comment.content %></p>
        <p>by <%= link_to comment.user.name, user_path(comment.user) %></p>
        <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>

