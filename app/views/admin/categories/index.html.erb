<div class="container">
  <h1>餐廳分類表</h1>
  <div>
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Category' ,admin_categories_path%>
  </div>
  
  <div class="form-inline">
    <%= form_for [:admin, @category] do  |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
      <% if @category.errors.any? %>
        <%= @category.errors.full_messages.to_sentence %>
      <% end %>
    <% end %>
  </div>


  <div class="row">
    <div class="col-md-12">
      
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th><%= category.id %></th>
            <td><%= category.name %></td>
            <td><%= link_to 'Edit', admin_categories_path(id: category.id) %></td>
            <td><%= link_to 'Delete', admin_category_path(category), method: :delete,data: {confirm: "Are you sure?"} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>