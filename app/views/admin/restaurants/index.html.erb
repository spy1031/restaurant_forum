<div class="container">
  
  <h1>網站後台</h1>
  <div>
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Category' ,admin_categories_path%>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <div>
        <%= link_to '<i class = "glyphicon glyphicon-plus" aria-hidden="true"></i> New Restaurant'.html_safe,new_admin_restaurant_path, class: "btn btn-primary" %>
      </div>
      <br>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category</th>
            <th>Name</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <th scope="row"><%= restaurant.id %></th>
            <td>[<%= restaurant.category.name %>]</td>
            <td><%= restaurant.name %></td>
            <td>
              <%= link_to '<i class = "glyphicon glyphicon-file" aria-hidden="true"></i>Show'.html_safe, admin_restaurant_path(restaurant) %>
              <%= link_to '<i class = "glyphicon glyphicon-pencil" aria-hidden="true"></i>Edit'.html_safe, edit_admin_restaurant_path(restaurant) %>
              <%= link_to '<i class = "glyphicon glyphicon-trash" aria-hidden="true"></i>Delete'.html_safe, admin_restaurant_path(restaurant), method: :delete, data:{confirm:"Are you sure>"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>

</div>

<%= paginate @restaurants %>

